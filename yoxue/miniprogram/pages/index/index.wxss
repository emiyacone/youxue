   color:#8d8d8d;
}

.personnum{
  width:70%;
  margin-left:12px;
}

.price {
  width: 90%;
  margin-left: 5%;
  margin-top: 5px;
  margin-bottom: 20px;
   font-size: 17px;
}

.star{
  display: flex;
}

.star image{
  width:10px;
  height:10px;
  margin:4px 1px;
  background-color: white;

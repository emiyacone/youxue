.unread{
  color: rgb(185, 187, 186);
  height: 60rpx;
  padding: 10rpx 40rpx;
  text-align: left;
  width: 670rpx;
}
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /*padding: 200rpx 0;*/
  box-sizing: border-box;
  background: #f5f5f9;
}
.container.withtab{
  margin: 0rpx 0 0 0;
  /*top: 105rpx;*/
}

.unread text{
  display: inline-block;
  line-height: 60rpx;
  font-size: 22rpx;
}
.unread image{
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  float: right;
}
.notify-item{
  width: 660rpx;
  background: #ffffff;
  padding: 25rpx 70rpx 25rpx 0;
  border-bottom: solid 1px #ebebeb;
      margin: 20rpx 10rpx;
      border-radius: 10rpx 10rpx 10rpx 10rpx;
}
.notify-item  image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;

  border:1px solid black;
}
.notify-item .avatar{
  flex: 1;
}
.notify-item .notify-content{
  flex: 5;
  text-align: left;
  margin-left: 60rpx;
}

.notify-item .notify-content text{
  display: block;
}

.notify-item .notify-content .notify-source{
  color: #1a1a1a;
  font-size: 30rpx;
  padding: 0 0 10rpx 0;
  font-weight: 660;
}

.notify-item .notify-content .notify-title{
  color: #AFAFAF;
  font-size: 30rpx;
  line-height: 34rpx;
}

.placehold{
  padding: 80rpx 0;
  font-size: 28rpx
}